{
  "inputs": {
    "items": ["사과", "바나나", "포도"],
    "score": 0.8
  },
  "steps": [
    {
      "type": "llm",
      "prompt": "시작합니다."
    },
    {
      "if": "{{score}} > 0.7",
      "then": [{ "type": "llm", "prompt": "조건 통과" }],
      "else": [{ "type": "llm", "prompt": "조건 실패" }]
    },
    {
      "for_each": "items",
      "as": "item",
      "steps": [
        {
          "type": "llm",
          "prompt": "{{item}} 처리 중"
        }
      ]
    },
    {
      "type": "llm",
      "prompt": "모든 작업 완료"
    }
  ]
}
